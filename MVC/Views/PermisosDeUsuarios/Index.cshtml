@model IEnumerable<MVC.Models.PermisosUsuarioModel>

@{
    ViewBag.Title = "Administrar permisos";
}

<h2>Lista de funcionarios y clientes</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rol)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rol)
        </td>
        <td>
            <a href="/PermisosDeUsuarios/Edit/@item.Id" class="btn btn-primary">Editar permisos</a>
        </td>
    </tr>
}

</table>
