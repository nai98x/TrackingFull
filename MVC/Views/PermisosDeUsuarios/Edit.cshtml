@model MVC.Models.PermisosUsuarioModel

@{
    ViewBag.Title = "Roles de usuario";
}

<h2>Editar rol de usuario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div>
            @Html.Display(Model.Email)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Rol, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownListFor(x => x.Rol, new SelectList(ViewBag.Roles), htmlAttributes: new { @class = "form-control", id = "Id" })
                @Html.ValidationMessageFor(x => x.Rol, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmar" class="btn btn-success" />
                <a href="/PermisosDeUsuarios" class="btn btn-primary">Volver</a>
            </div>
        </div>
    </div>
}
