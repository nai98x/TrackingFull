@model IEnumerable<MVC.Models.FuncionarioModel>

@{
    ViewBag.Title = "Funcionarios";
}

<h2>Lista de funcionarios</h2>

<p>
    <a href="/Funcionario/Create" class="btn btn-success">Nuevo registro</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Accion
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a href="/Funcionario/Edit/@item.Id" class="btn btn-primary">Editar</a>
            <a href="/Funcionario/Delete/@item.Id" class="btn btn-danger">Eliminar</a>
        </td>
    </tr>
}

</table>
